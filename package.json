{
  "name": "amaranth-codify-platform",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 8000 --host",
    "build": "vite build",
    "preview": "vite preview --port 8000 --host",
    "prepare": "lefthook install && (svelte-kit sync || echo '') && prisma generate",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run",
    "format": "biome format --write .",
    "format:prisma": "for file in prisma/schema/*.prisma; do npx prisma format \"$file\"; done",
    "db:studio": "prisma studio",
    "db:seed": "vite-node prisma/seed.ts",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "6.15.0",
    "better-auth": "^1.3.8",
    "carbon-components-svelte": "^0.89.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@vitest/browser": "^3.2.3",
    "lefthook": "^1.12.3",
    "playwright": "^1.53.0",
    "prisma": "^6.15.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.4",
    "vite-node": "^3.2.4",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^3.2.3",
    "vitest-browser-svelte": "^0.1.0"
  }
}
